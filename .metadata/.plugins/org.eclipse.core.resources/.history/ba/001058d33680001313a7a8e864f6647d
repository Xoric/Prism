package xoric.prism.data.types;

import java.nio.FloatBuffer;

public class PrismColor
{
	private final float[] rgba;

	public PrismColor()
	{
		rgba = new float[4];
	}

	public float getR()
	{
		return 1.0f;
	}

	public float getG()
	{
		return 0.0f;
	}

	public float getB()
	{
		return 0.0f;
	}

	public float getA()
	{
		return 1.0f;
	}

	public void rewind()
	{
		buffer.position(0);
	}

	public void set(float r, float g, float b, float a)
	{
		buffer.position(0);
		buffer.putFloat(r);
		buffer.putFloat(g);
		buffer.putFloat(b);
		buffer.putFloat(a);
	}

	public FloatBuffer getFloatBuffer()
	{
		return buffer.asFloatBuffer();
	}
}
