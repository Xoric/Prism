package xoric.prism.swing.input;

import javax.swing.JOptionPane;

import xoric.prism.data.Text;

public class IntInput extends ValueInput
{
	private static final long serialVersionUID = 1L;

	private int value;

	public IntInput(String name, String prompt, int value)
	{
		super(name, prompt);

		this.value = value;

		updateValueDisplay();
	}

	@Override
	protected void requestEdit()
	{
		String s = JOptionPane.showInputDialog(null, prompt, "Input", JOptionPane.PLAIN_MESSAGE);
		Text t = new Text();
		if (s != null)
			t.set(s);

		int v;
		try
		{
			v = Integer.valueOf(s);
		}
		catch (Exception e)
		{
			v = -1;
		}

		if (v >= 0)
		{
			value = v;
			updateValueDisplay();
		}
	}

	@Override
	protected String getValueText()
	{
		return String.valueOf(value);
	}
}
