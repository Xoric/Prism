package xoric.prism.creator.common.view;

import xoric.prism.creator.common.control.IMainMenuListener;
import xoric.prism.swing.PrismFrame;

public class PrismCreatorCommonView extends PrismFrame
{
	private static final long serialVersionUID = 1L;

	private final MainMenuBar mainMenuBar;

	public PrismCreatorCommonView(String title, String dataName, IMainMenuListener mainMenuListener)
	{
		super(title, 640, 480, true);

		mainMenuBar = new MainMenuBar(dataName, mainMenuListener);
		this.setJMenuBar(mainMenuBar);
	}

	protected MainMenuBar getMainMenuBar()
	{
		return mainMenuBar;
	}

	public static void main(String[] args)
	{
		PrismCreatorCommonView v = new PrismCreatorCommonView("Model Creator", "model", null);
		v.setVisible(true);
	}
}
