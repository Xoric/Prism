package xoric.prism.swing.input;

import javax.swing.JOptionPane;

import xoric.prism.data.Text;

public class TextInput extends ValueInput
{
	private static final long serialVersionUID = 1L;

	private Text value;

	public TextInput(String name, Text value)
	{
		super(name);

		this.value = value;

		updateValueDisplay();
	}

	@Override
	protected void requestEdit()
	{
//		String input = JOptionPane.showInputDialog(null, "Please enter " + name, "Input",
//				JOptionPane.QUESTION_MESSAGE);

		String s = JOptionPane.showInputDialog(null, "Enter " + name, "Text");
		Text t = new Text();
		if (s != null)
			t.set(s);

		if (t.length() > 0)
		{
			value = t;
			updateValueDisplay();
		}
	}

	@Override
	protected String getValueText()
	{
		return value.toString();
	}
}
