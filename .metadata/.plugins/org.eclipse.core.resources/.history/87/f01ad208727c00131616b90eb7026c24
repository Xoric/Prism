package xoric.prism.world.movement;

import xoric.prism.world.animations.AnimationIndex;

/**
 * Equivalent to {@link AnimationIndex.anim.AnimationIndex}.
 * @author XoricLee
 * @since 30.10.2011, 13:52:36
 */
public enum MoveType
{
	// limited to eight, equivalent to the the first eight values in animation.AnimationIndex thus fixed in chronology
	// revised:
	WALK,
	RUN,
	CROUCH,
	SLIDE,
	SWIM,
	FLY,
	// unsure:
	RIDE,
	RAIL;

	public static final MoveType[] VALUES = values();
	public static final String[] NAMES;
	public static final int COUNT = VALUES.length;

	static
	{
		int i = 0;
		NAMES = new String[COUNT];
		for (MoveType t : VALUES)
			NAMES[i++] = t.toString();
	}
}
