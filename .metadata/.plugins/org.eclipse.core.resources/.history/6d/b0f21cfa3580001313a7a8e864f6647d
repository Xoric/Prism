package xoric.prism.data.types;

import java.nio.ByteBuffer;
import java.nio.FloatBuffer;

public class PrismColor
{
	private final ByteBuffer buffer;

	public PrismColor()
	{
		buffer = ByteBuffer.allocateDirect(4 * 4);
		//		buffer = FloatBuffer.allocateDirect(4);
	}

	public float getR()
	{
		return 1.0f;
	}

	public float getG()
	{
		return 0.0f;
	}

	public float getB()
	{
		return 0.0f;
	}

	public float getA()
	{
		return 1.0f;
	}

	public void set(float r, float g, float b, float a)
	{
		buffer.position(0);
		buffer.putFloat(r);
		buffer.putFloat(g);
		buffer.putFloat(b);
		buffer.putFloat(a);
	}

	public FloatBuffer getFloatBuffer()
	{
		return buffer.asFloatBuffer();
	}
}
