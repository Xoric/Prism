package xoric.prism.data.exceptions2;

import java.util.ArrayList;
import java.util.List;

public class CodeLevel
{
	private final List<InfoPair> infoPairs = new ArrayList<InfoPair>();
	private final List<String> infoLines = new ArrayList<String>();
	
	private final ErrorToken errorID;
	private final Exception originalException;

	public CodeLevel(ErrorToken e)
	{
		this.errorID = e;
		this.originalException = null;
	}

	public CodeLevel(ErrorToken e,Exception originalException)
	{
		this.errorID = e;
		this.originalException = originalException;
	}

	public void addInfo(String line)
	{
		this.infoLines.add(line);
	}

	public void addInfo(String key, String value)
	{
		this.infoPairs.add(new InfoPair(key, value));
	}
}
