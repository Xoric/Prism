package xoric.prism.server.net;

import java.io.IOException;
import java.net.Socket;

import xoric.prism.com.SocketReader;

public class ClientCore
{
	private final Socket socket;

	public ClientCore(Socket socket) throws IOException
	{
		this.socket = socket;
	}

	public void kick() throws IOException
	{
		if (socket.isBound() && !socket.isClosed())
			socket.close();
	}

	public SocketReader getSocketReader()
	{
		return reader;
	}

	public Socket getSocket()
	{
		return socket;
	}

	@Override
	public String toString()
	{
		return socket == null ? "null-socket" : socket.getInetAddress().toString();
	}
}
