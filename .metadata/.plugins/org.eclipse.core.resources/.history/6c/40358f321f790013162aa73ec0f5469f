package xoric.prism.creator.drawer.image;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class AnimationView extends JPanel
{
	private static final long serialVersionUID = 1L;

	private final JLabel frameLabel;
	private final JButton leftButton;
	private final JButton rightButton;

	public AnimationView()
	{
		super(new GridBagLayout());

		frameLabel = new JLabel("0 of 0");

		GridBagConstraints c = new GridBagConstraints(0, 0, 1, 1, 0.2, 1.0, GridBagConstraints.CENTER, GridBagConstraints.BOTH, new Insets(
				0, 0, 0, 0), 0, 0);
		add(frameLabel, c);
	}
}
