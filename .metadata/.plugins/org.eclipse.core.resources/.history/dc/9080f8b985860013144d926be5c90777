package xoric.prism.creator.custom.view;

import javax.swing.ImageIcon;

import xoric.prism.creator.custom.model.SpriteModel;
import xoric.prism.data.types.IPoint_r;

public abstract class SpriteCell
{
	private SpriteModel model;
	private IPoint_r tileSize;
	private ImageIcon icon;

	public SpriteCell(SpriteModel model)
	{
		this.model = model;
	}

	protected void setIcon(ImageIcon icon)
	{
		this.icon = icon;
	}

	public abstract String getFrameName();

	public ImageIcon getIcon()
	{
		return icon;
	}

	public String getFilename()
	{
		return model.getFilename();
	}
}
