package xoric.prism.creator.common.view;

import javax.swing.JMenuBar;

import xoric.prism.creator.common.control.IMainMenuListener;
import xoric.prism.creator.common.control.IToolsMenuListener;

public class MainMenuBar extends JMenuBar
{
	private static final long serialVersionUID = 1L;

	private MainMenu mainMenu;
	private ToolsMenu toolsMenu;

	public MainMenuBar(String dataName, IMainMenuListener mainMenuListener, IToolsMenuListener toolsMenuListener)
	{
		add(mainMenu = new MainMenu(mainMenuListener, dataName));
		add(toolsMenu = new ToolsMenu(toolsMenuListener));
	}

	public MainMenu getMainMenu()
	{
		return mainMenu;
	}

	public ToolsMenu getToolsMenu()
	{
		return toolsMenu;
	}
}
