package xoric.prism.creator.drawer.model;

import xoric.prism.data.types.IPath_r;
import xoric.prism.world.entities.AnimationIndex;
import xoric.prism.world.entities.ViewAngle;

public class AnimationUsage
{
	private IPath_r path;
	private AnimationAngleModel directions[];
	private boolean isUsed;

	public AnimationUsage(IPath_r path)
	{
		this.path = path;
		int n = ViewAngle.values().length;
		this.directions = new AnimationAngleModel[n];

		for (ViewAngle a : ViewAngle.values())
			directions[a.ordinal()] = new AnimationAngleModel(path, a, a);
	}
}
