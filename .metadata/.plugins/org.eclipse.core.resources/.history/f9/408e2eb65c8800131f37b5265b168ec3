package xoric.prism.creator.common.view;

import java.awt.Component;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JLabel;
import javax.swing.JOptionPane;

public class AboutDialog
{
	private final JLabel aboutLabel;
	private final String creatorName;
	private final List<Component> components;

	public AboutDialog(String creatorName)
	{
		this.creatorName = creatorName;
		aboutLabel = new JLabel();
		components = new ArrayList<Component>();
	}

	public void addObject(Component c)
	{
		components.add(c);
	}

	public void showAbout()
	{
		Object[] message = new Object[1 + components.size()];
		message[0] = aboutLabel;
		for (int i = 0; i < components.size(); ++i)
			message[1 + i] = components.get(i);

		JOptionPane.showOptionDialog(null, message, "About " + creatorName, JOptionPane.OK_OPTION, JOptionPane.INFORMATION_MESSAGE);
	}
}
