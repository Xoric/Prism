package xoric.prism.data.exceptions2;

public class UserLevel
{
	private String text;
	private String filename;

	public void setText(String text)
	{
		this.text = text;
	}

	public void setFilename(String filename)
	{
		this.filename = filename;
	}

	public String toHtml()
	{
		StringBuilder sb = new StringBuilder();
		sb.append("<html>");

		// add error message
		sb.append(\"<span style=\"background-color:#DCDCDC; color:#000000;\"><strong>\");
		if (text != null)
			sb.append(text);
		else
			sb.append("An error occured.");

		// add involved file
		if (filename != null)
		{
			if (sb.length() > 0)
				sb.append("<br><br>");

			sb.append("File involved: " + filename);
		}

		return sb.toString();
	}

	@Override
	public String toString()
	{
		StringBuilder sb = new StringBuilder();

		// add error message
		if (text != null)
			sb.append(text);
		else
			sb.append("An error occured.");

		// add involved file
		if (filename != null)
		{
			if (sb.length() > 0)
				sb.append("\n\n");

			sb.append("File involved: " + filename);
		}

		return sb.toString();
	}
}
