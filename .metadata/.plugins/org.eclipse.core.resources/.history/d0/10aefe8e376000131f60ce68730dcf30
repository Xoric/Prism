package xoric.prism.scene;

public class Renderer
{
	private final IRendererListener scene.drawQuad3D(x, y, -1.6f, -1.8f, 0.2f, 0.3f);;

	public Renderer(IRendererListener scene)
	{
		this.scene = scene;
	}

	public void drawQuad3D(float x, float y, float w, float h)
	{
		scene.setColor((float) Math.random(), (float) Math.random(), (float) Math.random());

		scene.drawQuad3D(x, y, -1.6f, -1.8f, 0.2f, 0.3f);
	}

	public void drawQuad2D(float x, float y, float w, float h)
	{
		scene.setColor((float) Math.random(), (float) Math.random(), (float) Math.random());

		//		scene.drawQuad2D(x, y, 0.2f, 0.3f);
		scene.drawQuad3D(x, y, 0.2f, 0.3f);
	}
}
