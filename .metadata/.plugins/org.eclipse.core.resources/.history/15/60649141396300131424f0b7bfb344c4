package xoric.prism.exceptions;

import java.io.File;

import xoric.prism.data.modules.ErrorCode;

public class PrismMetaFileException extends PrismException
{
	private static final long serialVersionUID = 1L;

	private final File file;

	public PrismMetaFileException(ErrorCode errorCode, String info, File file)
	{
		super(errorCode, info);
		this.file = file;
	}

	@Override
	protected void listInfo(StringBuffer sb)
	{
		super.listInfo(sb);
		appendLine(sb, "file", file.toString());
	}
}
