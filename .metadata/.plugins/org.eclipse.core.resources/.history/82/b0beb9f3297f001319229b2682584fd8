package xoric.prism.world.model;

import xoric.prism.world.entities.ViewAngle;

public class AnimationMeta
{
	private int[] rows;
	private int[] columnCounts;

	public AnimationMeta()
	{
		final int n =  ViewAngle.COUNT;
		
		rows = new int[n];
		columnCounts = new int[n];

		for (int i = 0; i < n; ++i)
		{
			rows[i] = -1;
			columnCounts[i]=0;
		}
	}

	public void addViewAngle(ViewAngle v, int row)
	{
		rows[v.ordinal()] = row;
	}
}
