package physics;

public class DirectionW extends DirectionR
{
	/**
	 * Writeable Direction constructor.
	 * @param degree
	 *            direction in degree where 0 means right, 90 means top
	 */
	public DirectionW(int degree)
	{
		super(degree);
	}

	/**
	 * Writeable direction constructor.
	 * @param radian
	 *            direction in radian where 0 means right, {@code pi/2} means top
	 */
	public DirectionW(float radian)
	{
		super(radian);
	}

	/**
	 * Writeable direction constructor. Initializes with zero thus facing right.
	 */
	public DirectionW()
	{
		super();
	}

	/**
	 * Writeable direction constructor.
	 */
	public DirectionW(DirectionR other)
	{
		super(other.degree);
	}

	@Override
	public void set(int degree)
	{
		super.set(degree);
	}

	@Override
	public void set(float radian)
	{
		super.set(radian);
	}

	public void addDegree(int degree)
	{
		set(this.degree + degree);
	}
}
