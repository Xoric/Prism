package xoric.prism.creator.common.spritelist.control;

public class SpriteNameGenerator implements ISpriteNameGenerator
{
	private final String prefix;
	private final String suffix;

	public SpriteNameGenerator(String prefix, String suffix)
	{
		this.prefix = prefix;
		this.suffix = suffix;
	}

	@Override
	public String getFilename(int index)
	{
		return prefix + index + suffix + ".png";
	}
}
