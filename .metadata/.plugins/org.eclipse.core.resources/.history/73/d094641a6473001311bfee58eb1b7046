package xoric.prism.global;

import xoric.prism.data.exceptions.PrismException;
import xoric.prism.data.global.IFileTable_r;
import xoric.prism.data.global.IPrismGlobal_r;
import xoric.prism.data.types.IPath_r;
import xoric.prism.data.types.Path;

public class PrismGlobal implements IPrismGlobal_r
{
	private Path dataPath;
	private FileTable fileTable;

	public void load()
	{
		dataPath = new Path("E:/Prism/data");

		fileTable = new FileTable(dataPath);
		fileTable.load("common/toc.meta");
	}

	@Override
	public IPath_r getDataPath()
	{
		return dataPath;
	}

	public void loadAll() throws PrismException
	{
		fileTable = new FileTable();
		fileTable.load();
	}

	@Override
	public IFileTable_r getFileTable()
	{
		return fileTable;
	}
}
