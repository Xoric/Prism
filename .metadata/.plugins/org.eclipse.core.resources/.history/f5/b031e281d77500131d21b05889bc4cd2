package xoric.prism.swing.input.fields;

import javax.swing.JTextField;
import javax.swing.text.AbstractDocument;

import org.w3c.dom.Text;

public class PrismTextField extends JTextField
{
	private static final long serialVersionUID = 1L;

	private final PrismTextFilter filter;
	
	public PrismTextField(String s)
	{
		super(s);

		filter = new PrismTextFilter();
		((AbstractDocument) (this.getDocument())).setDocumentFilter(filter);
	}

	public PrismTextField(Text t)
	{
		super(t.toString());
	}
}
