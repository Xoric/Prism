package xoric.prism.creator.common.view;

import javax.swing.JMenuBar;

import xoric.prism.creator.common.control.IMainMenuListener;

public class MainMenuBar extends JMenuBar
{
	private static final long serialVersionUID = 1L;

	private MainMenu mainMenu;
	private ToolsMenu toolsMenu;

	public MainMenuBar(String dataName, INewDialogCreator dialogCreator, IMainMenuListener mainMenuListener)
	{
		add(mainMenu = new MainMenu(dialogCreator,dataName.mainMenuListener));
		add(toolsMenu = new ToolsMenu());
	}

	public MainMenu getMainMenu()
	{
		return mainMenu;
	}

	public ToolsMenu getToolsMenu()
	{
		return toolsMenu;
	}
}
