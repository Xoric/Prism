package xoric.prism.creator.common.spritelist.control;

import java.io.File;

import xoric.prism.data.types.IPath_r;

public abstract class SpriteNameGenerator
{
	private final IPath_r path;

	public SpriteNameGenerator(IPath_r path)
	{
		this.path = path;
	}

	public abstract String getFilename(int index);

	public File getFile(String filename)
	{
		return path.getFile(filename);
	}

	public File getFile(int index)
	{
		return path.getFile(getFilename(index));
	}

	public IPath_r getPath()
	{
		return path;
	}
}
