package xoric.prism.data.exceptions2;

import java.io.PrintWriter;
import java.io.StringWriter;

public class CodeLevel extends InfoContainer
{
	private final Throwable throwable;
	private final ErrorToken errorID;
	private final Exception originalException;

	public CodeLevel(Throwable t, ErrorToken e)
	{
		this.throwable = t;
		this.errorID = e;
		this.originalException = null;
	}

	public CodeLevel(Throwable t, ErrorToken e, Exception originalException)
	{
		this.throwable = t;
		this.errorID = e;
		this.originalException = originalException;
	}

	public String toHtml()
	{
		StringBuilder sb = new StringBuilder();
		sb.append("<html>");

		// add error message
		sb.append("<span style=\"background-color:#DCDCDC; color:#0;\"><strong>");
		sb.append(errorID.toString());
		sb.append("</span><br>");

		// add original exception
		if (originalException != null)
			sb.append("original exception: <code>" + originalException.toString() + "</code><br>");

		// add stack trace
		StringWriter sw = new StringWriter();
		PrintWriter pw = new PrintWriter(sw);
		throwable.printStackTrace(pw);
		sb.append(sw.toString());

		// add additional information
		this.extractInfoAsHtml(sb);

		sb.append("</html>");
		return sb.toString();
	}

	@Override
	public String toString()
	{
		StringBuilder sb = new StringBuilder();

		// add error message
		sb.append("<span style=\"background-color:#DCDCDC; color:#0;\"><strong>");
		sb.append(errorID.toString());
		sb.append("</span><br>");

		// add original exception
		if (originalException != null)
			sb.append("original exception: <code>" + originalException.toString() + "</code><br>");

		// add stack trace
		StringWriter sw = new StringWriter();
		PrintWriter pw = new PrintWriter(sw);
		throwable.printStackTrace(pw);
		sb.append(sw.toString());

		// add additional information
		this.extractInfoAsHtml(sb);

		return sb.toString();
	}
}
