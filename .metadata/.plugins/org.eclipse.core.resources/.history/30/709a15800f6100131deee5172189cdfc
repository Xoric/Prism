package xoric.prism.scene;

public class Renderer
{
	private final IRendererListener scene;

	public Renderer(IRendererListener scene)
	{
		this.scene = scene;
	}

	public void drawQuad3D(float x, float y, float w, float h, float zTop, float zBottom)
	{
		scene.setColor((float) Math.random(), (float) Math.random(), (float) Math.random());

		scene.drawQuad3D(x, y, -1.6f, -1.8f, w, h);
	}

	public void drawQuad2D(float x, float y, float w, float h)
	{
		scene.setColor((float) Math.random(), (float) Math.random(), (float) Math.random());

		scene.drawQuad2D(x, y, w, h);
	}
}
