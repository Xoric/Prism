package xoric.prism.swing.input.fields;

import javax.swing.text.AbstractDocument;

public class PrismIntField extends PrismField
{
	private static final long serialVersionUID = 1L;

	public PrismIntField(int i)
	{
		super(String.valueOf(i));

		filter = new PrismIntFilter(this);
		((AbstractDocument) (this.getDocument())).setDocumentFilter(filter);
	}
	
	public int setMaxValue(int max)
	{
		filter.setMax(max);
	}

	public int getInt()
	{
		String s = getText();
		int i = s.length() == 0 ? 0 : Integer.valueOf(s);
		return i;
	}
}
