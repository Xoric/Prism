package xoric.prism.world.model;

import xoric.prism.world.entities.ViewAngle;

public class AnimationMeta
{
	private int[] rows;
	private int[] columns;

	private int currentRow; // just for adding

	public AnimationMeta()
	{
		final int n = ViewAngle.COUNT;

		rows = new int[n];
		columns = new int[n];

		for (int i = 0; i < n; ++i)
		{
			rows[i] = -1;
			columns[i] = 0;
		}

		currentRow = 0;
	}

	public void addViewAngle(ViewAngle v, int columnCount)
	{
		int i = v.ordinal();

		rows[i] = currentRow++;
		columns[i] = columnCount;
	}
}
