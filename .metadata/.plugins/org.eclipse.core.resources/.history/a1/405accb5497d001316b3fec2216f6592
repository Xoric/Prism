package xoric.prism.creator.drawer.view;

import javax.swing.JMenu;

import xoric.prism.creator.drawer.settings.WorkingDirs;
import xoric.prism.data.types.IPath_r;

public class RecentMenu extends JMenu
{
	private static final long serialVersionUID = 1L;

	public RecentMenu()
	{
		super("Recent");
	}

	public void load(WorkingDirs workingDirs)
	{
		this.removeAll();

		List<IPath_r> dirs = workingDirs.getDirectories();
		int n = dirs.size();
		if (n > 5)
			n = 5;

		for (int i = 0; i < n; ++i)
		{

		}
	}
}
