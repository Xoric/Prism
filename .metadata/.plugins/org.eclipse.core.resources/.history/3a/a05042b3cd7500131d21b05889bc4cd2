package xoric.prism.creator.drawer.view;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class NewModelDialog
{
	public void show()
	{
		String prompt = "Prompt";

		JLabel nameLabel = new JLabel("Name");
		JTextField nameField = new JTextField("NEW MODEL");

		JPanel p = new JPanel(new BorderLayout());
		JLabel pathLabel = new JLabel("Working directory");
		JTextField pathField = new JTextField("");
		JButton pathButton = new JButton("..");
		p.add(BorderLayout.WEST, pathLabel);
		p.add(BorderLayout.CENTER, pathField);
		p.add(BorderLayout.EAST, pathButton);

		Object[] message = { prompt, null, nameLabel, nameField, pathLabel, p};

		JOptionPane pane = new JOptionPane(message, JOptionPane.PLAIN_MESSAGE, JOptionPane.OK_CANCEL_OPTION);
		pane.createDialog(null, "New Model").setVisible(true);
	}
}
