package xoric.prism.creator.drawer.model;

import java.io.File;

import xoric.prism.data.types.IPath_r;
import xoric.prism.world.entities.AnimationIndex;
import xoric.prism.world.entities.ViewAngle;

public class AnimationLineModel
{
	private IPath_r path;
	private AnimationIndex animationIndex;
	private ViewAngle viewAngle;
	private int tileCount;

	public AnimationLineModel(IPath_r path, AnimationIndex animationIndex, ViewAngle viewAngle)
	{
		this.path = path;
		this.animationIndex = animationIndex;
		this.viewAngle = viewAngle;

		for (int i = 0; i < 3; ++i)
			System.out.println(getFile(i).toString());
		System.out.println();
	}

	private String getFilename(int index)
	{
		return getFilename(animationIndex, viewAngle, index);
	}

	private File getFile(int index)
	{
		String filename = getFilename(index);
		return path.getFile(filename);
	}

	public static boolean findAny(IPath_r path, AnimationIndex a)
	{
		String s = animationIndex.toString().toLowerCase() + "." + viewAngle.toString().toLowerCase() + "." + index + ".png";
	}

	private static String getFilename(AnimationIndex a, ViewAngle v, int index)
	{
		return a.toString().toLowerCase() + "." + v.toString().toLowerCase() + "." + index + ".png";
	}

	private static File getFile(IPath_r path, int index)
	{
		String filename = getFilename(index);
		return path.getFile(filename);
	}
}
