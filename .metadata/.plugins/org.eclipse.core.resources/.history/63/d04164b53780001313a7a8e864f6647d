package xoric.prism.data.types;

public class PrismColor
{
	private final float[] rgba_f;
	private final int[] rgba_i;

	public PrismColor()
	{
		rgba_f = new float[4];
		rgba_i = new int[4];
	}

	public float[] getRGBA()
	{
		return rgba_f;
	}

	public void set(float r, float g, float b, float a)
	{
		rgba_f[0] = r;
		rgba_f[1] = g;
		rgba_f[2] = b;
		rgba_f[3] = a;
	}
}
