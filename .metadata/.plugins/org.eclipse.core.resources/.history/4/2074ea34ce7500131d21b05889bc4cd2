package xoric.prism.creator.drawer.view;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class NewModelDialog
{
	public void show()
	{
		String prompt = "Prompt";

		// model name
		JLabel nameLabel = new JLabel("Name");
		JTextField nameField = new JTextField("NEW MODEL");

		// tile size
		JLabel sizeLabel = new JLabel("Tile size");
		JTextField widthField = new JTextField("12");
		JLabel sizeLabel2 = new JLabel("x");
		JTextField heightField = new JTextField("18");
		JLabel sizeLabel3 = new JLabel(" pixels");
		JPanel sizePanel = new JPanel(new FlowLayout());
		sizePanel.add(widthField);
		sizePanel.add(heightField);
		sizePanel.add(widthField);
		sizePanel.add(sizeLabel3);

		// working directory
		JPanel pathPanel = new JPanel(new BorderLayout());
		JLabel pathLabel = new JLabel("Working directory");
		JTextField pathField = new JTextField("");
		JButton pathButton = new JButton("...");
		pathPanel.add(BorderLayout.CENTER, pathField);
		pathPanel.add(BorderLayout.EAST, pathButton);

		Object[] message = { prompt, null, nameLabel, nameField, pathLabel, pathPanel,sizeLabel,sizePanel };

		JOptionPane pane = new JOptionPane(message, JOptionPane.PLAIN_MESSAGE, JOptionPane.OK_CANCEL_OPTION);
		pane.createDialog(null, "New Model").setVisible(true);
	}
}
