package xoric.prism.client.bootstrap;

import javax.swing.UIManager;

import xoric.prism.PrismGlobal;
import xoric.prism.common.Path;
import xoric.prism.common.loader.PrismDataLoader;
import xoric.prism.creator.drawer.PrismDrawer;
import xoric.prism.data.modules.ErrorCode;
import xoric.prism.data.modules.ModuleID;
import xoric.prism.exceptions.PrismException;
import xoric.prism.exceptions.PrismMetaFileException;
import xoric.prism.scene.IScene;
import xoric.prism.scene.lwjgl.PrismSceneLWJGL;

public class PrismClientBootstrap
{
	private static IScene scene;
	private static PrismDrawer drawer;

	private static void setLookAndFeel()
	{
		try
		{
			UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
		}
		catch (Exception e)
		{
		}
	}

	private static void loadAll(Path dataPath) throws PrismMetaFileException
	{
		new PrismDataLoader(dataPath).loadAll();
	}

	public static void main(String[] args)
	{
		// set look and feel
		setLookAndFeel();

		// register as default module
		ErrorCode.defaultModuleID = ModuleID.CREATOR;

		// set data-path
		PrismGlobal.dataPath = new Path("E:/Prism/data");

		try
		{

			// initialize
			Path dataPath = new Path("E:/Prism/data");
			loadAll(dataPath);

			// create scene and client
			scene = new PrismSceneLWJGL();
			drawer = new PrismDrawer(scene);

			// start creator
			drawer.start();
		}
		catch (PrismException e)
		{
			e.printStackTrace();
			e.showErrorMessage();
		}
		catch (Exception e)
		{
			e.printStackTrace();
		}
	}
}
